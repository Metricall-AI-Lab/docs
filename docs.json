{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Uplint",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/favicon.ico",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "quickstart",
              "authentication"
            ]
          },
          {
            "group": "Core Concepts",
            "pages": [
              "concepts/file-contexts",
              "concepts/trust-pipeline",
              "concepts/content-intelligence"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Files",
            "pages": [
              "api-reference/files/upload",
              "api-reference/files/list",
              "api-reference/files/download",
              "api-reference/files/metadata",
              "api-reference/files/delete"
            ]
          },
          {
            "group": "File Contexts",
            "pages": [
              "api-reference/contexts/create",
              "api-reference/contexts/list",
              "api-reference/contexts/get",
              "api-reference/contexts/update"
            ]
          },
          {
            "group": "API Keys",
            "pages": [
              "api-reference/api-keys/create",
              "api-reference/api-keys/list",
              "api-reference/api-keys/list-simple",
              "api-reference/api-keys/get",
              "api-reference/api-keys/update",
              "api-reference/api-keys/revoke",
              "api-reference/api-keys/enable",
              "api-reference/api-keys/disable"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Website",
          "href": "https://uplint.dev",
          "icon": "globe"
        },
        {
          "anchor": "Dashboard",
          "href": "https://app.uplint.dev",
          "icon": "gauge"
        },
        {
          "anchor": "Blog",
          "href": "https://uplint.dev/dispatches",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.png",
    "dark": "/logo/dark.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@uplint.dev"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://app.uplint.dev"
    }
  },
  "api": {
    "baseUrl": "https://api.uplint.dev",
    "auth": {
      "method": "bearer",
      "name": "Authorization"
    }
  },
  "openapi": [
    "/api-reference/openapi.json"
  ],
  "footer": {
    "socials": {
      "x": "https://x.com/uplintdev",
      "github": "https://github.com/uplint",
      "linkedin": "https://linkedin.com/company/uplint"
    }
  }
}